<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EMarket" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/blueAppColor</item> <!-- Add this line -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.EMarket" parent="Base.Theme.EMarket" />


    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/blueAppColor</item>
        <item name="buttonTint">@color/blueAppColor</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorControlNormal">@color/blueAppColor</item>
    </style>

    <style name="SearchBarStyle">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:hint">Search</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColorHint">#FF6c7593</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="android:drawablePadding">@dimen/size2</item>
        <item name="maxLines">1</item>
    </style>
</resources>